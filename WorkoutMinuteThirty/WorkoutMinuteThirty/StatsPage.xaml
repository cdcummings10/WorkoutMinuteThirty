<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkoutMinuteThirty.StatsPage">
    <ContentPage.Content>
        <StackLayout>
            <Grid ColumnDefinitions="50*, 20*, 15*, 15*"
                  ColumnSpacing="8"
                  HorizontalOptions="FillAndExpand"
                  Padding="20">
                <Picker Text="Workout"
                    FontSize="20"
                    Grid.Column="0"></Picker>
                <Entry
                    Grid.Column="1"></Entry>
                <Button
                    CornerRadius="30"
                    FontSize="20"
                    Grid.Column="2"
                    Text="+"></Button>
                <Button
                    CornerRadius="30"
                    FontSize="20"
                    Grid.Column="3"
                    Text="-"></Button>
            </Grid>
            <Button x:Name="btnHome" 
                    Clicked="btnHome_Clicked"
                    Text="Home"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>